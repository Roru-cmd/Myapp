<% provide(:title, "User") %>
<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>             
      <%= link_to("Edit","/users/#{@user.id}/edit") %> |      
      <%#= link_to("Delete","/users/#{@user.id}/destroy", {method: "post"}) %>
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
      <%= link_to 'New Task', new_task_path %>     
    </div>  

    <ul class="user-tabs">
      <li><%= link_to("Tasks", "/users/#{@user.id}") %></li>
      <li class="active"><%= link_to("Tickets", "/users/#{@user.id}/tickets") %></li>
      <li><%= link_to("Today", "/users/#{@user.id}/today") %></li>
    </ul>
   
   <% @user.tickets.each do |ticket| %> 
      <div class="users-index-item">
        <!-- <div class="user-right"> -->
        <div class="tickets-left">
          <%= link_to ticket.ticket_d.first(50), ticket %>
          <div class="post-time">
            Last update: <%= ticket.updated_at.localtime.strftime("%Y.%m.%d, %H:%M")%> </p> 
          </div>
          </div>
          <%#= link_to("Edit", "/tickets/#{ticket.id}/edit") %> 
          <div class="post-menus"> 
            <%= link_to 'Edit', edit_ticket_path(ticket) %> |
            <%#= link_to 'Back', tickets_path %> 
            <%#= link_to 'Back to User', user_path(@ticket.user_id) %> 
            <%= link_to 'Delete', ticket, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>           
        <!-- </div> -->
      </div>
    <% end %>   
    
  </div> 
</div> 
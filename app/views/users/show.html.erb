<%#= form_with(model: [@user, @user.tasks.create], local: true) do |form| %>
<%= form_with(model: [@user, @user.tasks.build], local: true) do |form| %>
  <p width="150x">
    <%= form.label :Title %><br>
    <%= form.text_field :t_title %>
  </p>

  <p width="150x">
    <%= form.label :Description %><br>
    <%= form.text_area :t_descn %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
</div>

<br></br>

<h3>TICKETS</h3>
<table>
  <thead>
    <tr>
      <th width="150x" align="left">Task</th>
      <th width="200px" align="left">Description</th>
      <th width="100px" align="left">Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.tickets.each do |t| %>
      <tr>
        <td><%= %> <%=Task.all.collect{ |u| u.t_title }%></td>
        <td><%= t.ticket_d.first(50) %></td>
        <td><%= t.updated_at.localtime.strftime("%H:%M %Y.%m.%d") %></td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_ticket_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>    
    <% end %>
  </tbody>
</table>

<br></br>

<div class="new">
<h3>New ticket</h3>

<%= form_with(model: [@user, @user.tickets.build], local: true) do |form| %>
  <p width="150x">
    <%= form.label :Title %><br>
    <%#= form.text_field :t_title %>
    <%= form.select :t_title, Task.all.collect{ |u| [u.t_title] }%>
  </p>

  <p width="150x">
    <%= form.label :Description %><br>
    <%= form.text_area :ticket_d %>
  </p>

    <%= form.label :User %>
    <%= form.select :user_id, User.all.collect{ |u| [u.name, u.id ] }%>
  <p>
    <%= form.submit %>
  </p>
<% end %>
</div>



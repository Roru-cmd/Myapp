<% provide(:title, "Users") %>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<p><%= button_to 'NEW USER', new_user_path, method: :get%>
</p>

<table>
  <thead>
    <tr>
      <th width="200px" align="left">Name</th>
      <th width="200px" align="left">Active task</th>
      <th width="150px" align="left">Task updated</th>
     
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user%></td>
        <td> <%# user.tasks.last(1).each do |u| %>
        <% user.tasks.order('updated_at DESC').take(1).each do |u| %>
          <%= link_to u.t_title, u %>: 
          <%= u.t_descn.first(50) %>
        <% end %>  
        </td>
        <td> <%# user.tasks.last(1).each do |u| %>
        <% user.tasks.order('updated_at DESC').take(1).each do |u| %>
          <%= u.updated_at.localtime.strftime("%H:%M %Y.%m.%d")%> 
        <% end %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>


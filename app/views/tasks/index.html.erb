<% provide(:title, "Tasks") %>

<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<table>
  <thead>
    <tr>
      <th width="150px">Task</th>
      <th width="250px">Description</th>
      <th width="150px">Updated</th>
      <th width="30px">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.t_title %></td>
        <td><%= task.t_descn.first(50) %></td>
        <td><%= task.updated_at.localtime.strftime("%H:%M %Y.%m.%d") %></td>
        <td><%= task.user_id %></td>
        <td width="30px"><%= link_to 'Show', task %></td>
        <td width="30px"><%= link_to 'Edit', edit_task_path(task) %></td>
        <td width="30px"><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


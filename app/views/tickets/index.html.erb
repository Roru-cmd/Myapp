<% provide(:title, "Tickets") %>

<div class="main users-index">
<div class="container">
<h1 class="users-heading">Tickets</h1>
<%= link_to 'New Ticket', new_ticket_path %>
<table>
  <thead>
    <tr>
      
      <th width="300px" align="left">Description</th>
      <th width="150px" align="left">Updated</th>
      <!--<th align="left">Start</th>
      <th align="left">End</th>-->
      <th width="150px" align="left">user_id</th>
      <th width="150px" align="left">task_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr> 
        <td><%= link_to ticket.ticket_d.first(50), ticket %></td>
        <td><%= ticket.updated_at.localtime.strftime("%H:%M %Y.%m.%d") %></td>
        <!-- <td><%= ticket.ticket_start.localtime.strftime("%H:%M %Y.%m.%d") %></td>          
        <td><%= ticket.ticket_end.localtime.strftime("%H:%M %Y.%m.%d") %></td>
        -->
        <td><%= ticket.user_id %></td>
        <td><%= ticket.task_id %></td>
        <!-- <td width="30px"><%#= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


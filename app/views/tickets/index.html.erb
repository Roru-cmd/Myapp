<% provide(:title, "Tickets") %>

<p id="notice"><%= notice %></p>
<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th width="30px">Task</th>
      <th width="250px">Description</th>
      <th>Start</th>
      <th>End</th>
      <th width="30px">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.task_id %></td>
        <td><%= ticket.ticket_d.first(50) %></td>
        <td><%= ticket.ticket_start.localtime.strftime("%H:%M %Y.%m.%d") %></td>
        <td><%= ticket.ticket_end.localtime.strftime("%H:%M %Y.%m.%d") %></td>
        <td><%= ticket.user_id %></td>
        <td width="30px"><%= link_to 'Show', ticket %></td>
        <td width="30px"><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td width="30px"><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>

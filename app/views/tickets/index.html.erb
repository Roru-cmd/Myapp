<% provide(:title, "Tickets") %>

<p id="notice"><%= notice %></p>
<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th width="150px">Task</th>
      <th width="200px">Description</th>
      <th>Start</th>
      <th>End</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.task_id %></td>
        <td><%= ticket.ticket_d %></td>
        <td><%= ticket.ticket_start %></td>
        <td><%= ticket.ticket_end %></td>
        <td><%= ticket.user_id %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
